{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    // TODO: local nx plugins observation:
    // - ts paths cannot use wild cards
    // - ts paths are ignored
    "paths": {
      "@robby-rabbitman/nx-plus-*": ["packages/*/src/index.ts"],
      "@robby-rabbitman/nx-plus-e2e-*": ["e2e/*/src/index.ts"],
      "@robby-rabbitman/nx-plus-libs-*": ["libs/*/src/index.ts"],
      "@robby-rabbitman/nx-plus-libs-e2e-version-matrix": [
        "libs/e2e-version-matrix/src/index.ts"
      ],
      "@robby-rabbitman/nx-plus-tools-*": ["tools/*/src/index.ts"],
      "@robby-rabbitman/nx-plus-tools-tsc": ["tools/tsc/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
