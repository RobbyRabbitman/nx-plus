{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "sync": {
    "applyChanges": true
  },
  "cli": { "packageManager": "pnpm" },
  "release": {
    "releaseTagPattern": "{version}",
    "git": { "commitMessage": "chore: release {version} ðŸš€ [skip ci]" },
    "version": {
      "conventionalCommits": true,
      "generatorOptions": {
        "fallbackCurrentVersionResolver": "disk",
        "preserveLocalDependencyProtocols": true
      }
    },
    "changelog": {
      "automaticFromRef": true,
      "workspaceChangelog": {
        "createRelease": "github",
        "renderOptions": { "authors": false }
      }
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": ["{workspaceRoot}/.github/workflows/ci.yml"],
    "eslintGlobals": ["{workspaceRoot}/tools/eslint*/**/*"]
  },
  "plugins": [
    "@robby-rabbitman/nx-plus-tools-eslint-nx-dependency-checks-plugin",
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck-tsc"
        },
        "build": {
          "targetName": "build-tsc",
          "configName": "tsconfig.lib.json"
        }
      }
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": { "targetName": "lint-eslint" }
    },
    {
      "plugin": "@nx/vite/plugin",
      "options": { "testTargetName": "test-vite" }
    }
  ],
  "targetDefaults": {
    "nx-release-publish": {
      "options": { "packageRoot": "{projectRoot}" },
      "dependsOn": ["build*"]
    },
    "lint-eslint": {
      "inputs": ["default", "eslintGlobals"]
    },
    "test-vite": {
      "defaultConfiguration": "local",
      "outputs": ["{projectRoot}/coverage"],
      "configurations": {
        "ci": { "run": true },
        "local": {
          "ui": true
        }
      }
    }
  }
}
