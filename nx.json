{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "cli": {
    "packageManager": "pnpm"
  },
  "release": {
    "releaseTagPattern": "{version}",
    "git": {
      "commitMessage": "chore: release {version} ðŸš€ [skip ci]"
    },
    "version": {
      "conventionalCommits": true,
      "generatorOptions": {
        "fallbackCurrentVersionResolver": "disk"
      }
    },
    "changelog": {
      "automaticFromRef": true,
      "workspaceChangelog": {
        "createRelease": "github",
        "renderOptions": {
          "authors": false
        }
      }
    },
    "projects": ["packages/**/*"]
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": ["{workspaceRoot}/.github/workflows/ci.yml"],
    "publishable": ["{workspaceRoot}/packages/**/*"],
    "eslintGlobals": [
      "{workspaceRoot}/.eslintrc.json",
      "{workspaceRoot}/.eslintignore",
      "{workspaceRoot}/eslint.config.js"
    ],
    "typescriptGlobals": [
      "{workspaceRoot}/tsconfig.base.config",
      "{workspaceRoot}/tools/typescript/**/*"
    ]
  },
  "plugins": [
    {
      "plugin": "@robby-rabbitman/nx-plus-tools-typescript/tsc-plugin",
      "options": {
        "tscTargetConfig": {
          "inputs": ["default", "^default", "typescriptGlobals"]
        }
      },
      "exclude": ["tools-typescript"]
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint-eslint"
      }
    },
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "testTargetName": "test-vite"
      },
      "exclude": ["e2e/**/*"]
    },
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "testTargetName": "e2e-vite"
      },
      "include": ["e2e/**/*"]
    },
    {
      "plugin": "@robby-rabbitman/nx-plus-libs-e2e-util/plugins/e2e-version-matrix",
      "options": {
        "e2eVersionMatrixTargetName": "e2e-version-matrix-vite",
        "e2eTargetName": "e2e-vite",
        "configurationConfig": {
          "run": true,
          "coverage": false
        }
      },
      "include": ["e2e/**/*"]
    }
  ],
  "targetDefaults": {
    "nx-release-publish": {
      "options": {
        "packageRoot": "{workspaceRoot}/dist/{projectRoot}"
      },
      "dependsOn": ["build"]
    },
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"]
    },
    "lint-eslint": {
      "inputs": [
        "default",
        "^default",
        "eslintGlobals",
        {
          "externalDependencies": ["eslint"]
        }
      ]
    },
    "test-vite": {
      "configurations": {
        "ci": {
          "run": true
        }
      }
    },
    "e2e-vite": {
      "options": {
        "config": "{projectRoot}/vitest.config.mts",
        "cwd": "{workspaceRoot}"
      }
    }
  }
}
