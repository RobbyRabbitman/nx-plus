{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "cli": {
    "packageManager": "pnpm"
  },
  "release": {
    "releaseTagPattern": "{version}",
    "git": {
      "commitMessage": "chore: release {version} ðŸš€ [skip ci]"
    },
    "version": {
      "conventionalCommits": true,
      "generatorOptions": {
        "fallbackCurrentVersionResolver": "disk"
      }
    },
    "changelog": {
      "automaticFromRef": true,
      "workspaceChangelog": {
        "createRelease": "github",
        "renderOptions": {
          "authors": false
        }
      }
    },
    "projects": ["packages/**/*"]
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": ["{workspaceRoot}/.github/workflows/ci.yml"],
    "publishable": ["{workspaceRoot}/packages/**/*"],
    "jestGlobals": [
      "{workspaceRoot}/jest.config.ts",
      "{workspaceRoot}/jest.preset.js"
    ],
    "eslintGlobals": [
      "{workspaceRoot}/.eslintrc.json",
      "{workspaceRoot}/.eslintignore",
      "{workspaceRoot}/eslint.config.js"
    ]
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    },
    {
      "plugin": "@nx/jest/plugin",
      "options": {
        "targetName": "test"
      },
      "exclude": ["e2e/**/*"]
    },
    {
      "plugin": "@nx/jest/plugin",
      "options": {
        "targetName": "e2e"
      },
      "include": ["e2e/**/*"]
    }
  ],
  "targetDefaults": {
    "nx-release-publish": {
      "options": {
        "packageRoot": "{workspaceRoot}/dist/{projectRoot}"
      },
      "dependsOn": ["build"]
    },
    "e2e": {
      "configurations": {
        "development": {
          "command": "pnpm exec nx run tools-local-registry:run-e2e --e2eProjectName {projectName} --e2eTarget e2e"
        },
        "ci": {
          "command": "pnpm exec nx run tools-local-registry:run-e2e --e2eProjectName {projectName} --e2eTarget e2e"
        }
      }
    },
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"]
    }
  }
}
