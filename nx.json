{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "cli": { "packageManager": "pnpm" },
  "release": {
    "releaseTagPattern": "{version}",
    "git": { "commitMessage": "chore: release {version} ðŸš€ [skip ci]" },
    "version": {
      "conventionalCommits": true,
      "generatorOptions": { "fallbackCurrentVersionResolver": "disk" }
    },
    "changelog": {
      "automaticFromRef": true,
      "workspaceChangelog": {
        "createRelease": "github",
        "renderOptions": { "authors": false }
      }
    },
    "projects": ["packages/**/*"]
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": ["{workspaceRoot}/.github/workflows/ci.yml"],
    "publishable": ["{workspaceRoot}/packages/**/*"],
    "eslintGlobals": ["{workspaceRoot}/tools/eslint/**/*"],
    "typescriptGlobals": [
      "{workspaceRoot}/tsconfig.base.config",
      "{workspaceRoot}/tools/typescript/**/*"
    ]
  },
  "plugins": [
    {
      "plugin": "@robby-rabbitman/nx-plus-tools-tsc/plugin",
      "options": {
        "tscTargetConfig": {
          "inputs": ["default", "^default", "typescriptGlobals"]
        }
      },
      "exclude": ["tools-tsc"]
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": { "targetName": "lint-eslint" }
    },
    {
      "plugin": "@nx/vite/plugin",
      "options": { "testTargetName": "test-vite" },
      "exclude": ["e2e/**/*"]
    },
    {
      "plugin": "@robby-rabbitman/nx-plus-libs-e2e-version-matrix/plugin",
      "options": {
        "targetPrefix": "e2e-vite",
        "targetConfiguration": {
          "cache": true,
          "parallelism": false,
          "command": "vitest",
          "options": {
            "run": true,
            "coverage": false,
            "config": "{projectRoot}/vitest.config.mts"
          },
          "inputs": [
            "default",
            "^default",
            { "externalDependencies": ["vitest"] },
            { "env": "CI" }
          ]
        },
        "matrixTargetConfiguration": {
          "cache": true,
          "inputs": [
            "default",
            "^default",
            { "externalDependencies": ["vitest"] },
            { "env": "CI" }
          ]
        }
      },
      "include": ["e2e/**/*"]
    }
  ],
  "targetDefaults": {
    "nx-release-publish": {
      "options": { "packageRoot": "{workspaceRoot}/dist/{projectRoot}" },
      "dependsOn": ["build"]
    },
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"]
    },
    "lint-eslint": {
      "inputs": ["default", "^default", "eslintGlobals"]
    },
    "test-vite*": {
      "inputs": [
        "default",
        "^default",
        { "externalDependencies": ["vitest"] },
        { "env": "CI" }
      ],
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "cache": true,
      "configurations": { "ci": { "run": true } }
    },
    "e2e-vite": {
      "inputs": ["default", "^default"],
      "options": {
        "config": "{projectRoot}/vitest.config.mts",
        "cwd": "{workspaceRoot}"
      }
    }
  }
}
