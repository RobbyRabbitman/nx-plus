{
  "name": "tools-local-registry",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "tags": ["scope:node", "type:tool"],
  "targets": {
    "serve": {
      "executor": "@nx/js:verdaccio",
      "options": {
        "port": 4321,
        "config": "{projectRoot}/src/config.yml",
        "storage": "{projectRoot}/storage"
      }
    },
    "publish": {
      "cache": true,
      "inputs": ["publishable"],
      "outputs": ["{workspaceRoot}/{projectRoot}/storage"],
      "command": "pnpm exec ts-node {projectRoot}/src/publish.cli.ts --localRegistryTarget '{projectName}:serve' --storage {projectRoot}/storage"
    },
    "test": {
      "cache": true,
      "inputs": ["publishable"],
      "command": "pnpm exec nx run {projectName}:publish"
    }
  }
}
