{
  "extends": "./tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["vite.config.ts", "vitest.config.ts", "src/**/*.spec.ts"],
  "references": [
    { "path": "../verdaccio/tsconfig.lib.json" },
    { "path": "../vite/tsconfig.lib.json" },
    { "path": "../eslint/tsconfig.lib.json" }
  ]
}
