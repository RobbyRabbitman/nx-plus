{
  "name": "tools-renovate-bot",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "tags": ["scope:node", "type:tool"],
  "targets": {
    "test": {
      "command": "RENOVATE_CONFIG_FILE={projectRoot}/src/renovate.json renovate-config-validator --strict"
    },
    "renovate": {
      "options": {
        "command": "RENOVATE_CONFIG_FILE={projectRoot}/src/renovate.jsonx renovate"
      },
      "configurations": {
        "ci": {},
        "development": {
          "env": {
            "RENOVATE_PLATFORM": "local",
            "RENOVATE_REPOSITORY_CACHE": "reset",
            "RENOVATE_DRY_RUN": "full",
            "LOG_LEVEL": "debug"
          }
        }
      },
      "defaultConfiguration": "ci"
    }
  }
}
