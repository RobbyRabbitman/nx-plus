{
  "name": "@robby-rabbitman/nx-plus-tools-renovate-bot",
  "version": "0.6.2",
  "files": [
    "src/renovate.json",
    "package.json"
  ],
  "nx": {
    "namedInputs": {
      "targets-lint-renovate-config": [
        {
          "externalDependencies": [
            "renovate"
          ]
        },
        {
          "env": "RENOVATE_CONFIG_FILE"
        }
      ]
    },
    "targets": {
      "lint-renovate-config": {
        "inputs": [
          "targets-lint-renovate-config"
        ],
        "cache": true,
        "command": "renovate-config-validator --strict",
        "options": {
          "env": {
            "RENOVATE_CONFIG_FILE": "{projectRoot}/src/renovate.json"
          }
        }
      },
      "renovate": {
        "command": "renovate",
        "options": {
          "env": {
            "RENOVATE_CONFIG_FILE": "{projectRoot}/src/renovate.json",
            "LOG_LEVEL": "debug"
          }
        },
        "configurations": {
          "ci": {},
          "local": {
            "env": {
              "RENOVATE_PLATFORM": "local",
              "RENOVATE_REPOSITORY_CACHE": "reset",
              "RENOVATE_DRY_RUN": "full"
            }
          }
        },
        "defaultConfiguration": "local"
      }
    }
  }
}
