{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",

    ":configMigration",

    "npm:unpublishSafe",

    ":separateMajorReleases",
    ":combinePatchMinorReleases",

    ":automergeMinor",

    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    ":semanticCommitScopeDisabled",

    ":prHourlyLimitNone",
    ":prConcurrentLimitNone",

    ":maintainLockFilesWeekly"
  ],
  "printConfig": true,

  "labels": ["renovate"],

  "onboarding": false,
  "requireConfig": "ignored",

  "autoApprove": true,

  "enabledManagers": ["npm"],
  "packageRules": [
    {
      "description": "ignore '@robby-rabbitman/nx-plus-*' packages since we are using the pnpm 'workspace:*' protocol",
      "enabled": false,
      "matchManagers": ["npm"],
      "matchPackageNames": ["@robby-rabbitman/nx-plus-*"]
    },
    {
      "description": "TODO: @web/test-runner and @web/dev-server are not stable yet and they are pinned to a minor, so we don't auto merge them",
      "matchManagers": ["npm"],
      "matchPackageNames": ["@web/test-runner", "@web/dev-server"],
      "matchUpdateTypes": ["minor"],
      "automerge": false
    },
    {
      "description": "Groups all 'prettier' packages together. Remove me when there is a group preset",
      "groupName": "prettier",
      "matchManagers": ["npm"],
      "matchPackageNames": ["prettier", "prettier-*"]
    },
    {
      "description": "Groups all 'nx' packages together. Remove me when there is a group preset",
      "groupName": "nx",
      "matchManagers": ["npm"],
      "matchPackageNames": ["nx", "@nx/**"]
    },
    {
      "description": "Update renovate itself once a week",
      "matchManagers": ["npm"],
      "matchPackageNames": ["renovate"],
      "schedule": ["* * * * 1"]
    }
  ],
  "customManagers": [
    {
      "description": "https://docs.renovatebot.com/presets-customManagers/#custommanagersgithubactionsversions",
      "customType": "regex",
      "fileMatch": [
        "(^|/)(workflow-templates|\\.(?:github|gitea|forgejo)/(?:workflows|actions))/.+\\.ya?ml$",
        "(^|/)action\\.ya?ml$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-zA-Z0-9-._]+?) depName=(?<depName>[^\\s]+?)(?: (?:lookupName|packageName)=(?<packageName>[^\\s]+?))?(?: versioning=(?<versioning>[^\\s]+?))?(?: extractVersion=(?<extractVersion>[^\\s]+?))?\\s+[A-Za-z0-9_]+?_VERSION\\s*:\\s*[\"']?(?<currentValue>.+?)[\"']?\\s"
      ]
    }
  ]
}
