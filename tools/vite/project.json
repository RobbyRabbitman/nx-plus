{
  "name": "tools-vite",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "tags": ["scope:node", "type:tool"],
  "targets": {
    "build": { "executor": "nx:noop" },
    "nx-release-publish": {
      "executor": "nx:noop"
    },
    "test-vite": {
      "command": "nx run-many",
      "options": {
        "run": true,
        "targets": "test-vite-local-registry,test-vite-node-typescript",
        "projects": "{projectName}"
      }
    },
    "test-vite-local-registry": {
      "command": "vitest --config {projectRoot}/vitest-local-registry.config.mts",
      "parallelism": false
    },
    "test-vite-node-typescript": {
      "command": "vitest --config {projectRoot}/vitest-node-typescript.config.mts"
    }
  }
}
