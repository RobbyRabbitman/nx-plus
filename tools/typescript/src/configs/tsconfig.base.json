{
  // the base tsconfig for all ts projects of this repository
  "compilerOptions": {
    // per default the tsc should use incremental builds
    "composite": true,
    "incremental": true,

    // esm
    "target": "ESNext",
    "lib": ["ESNext"],

    // 'nodenext' ensures projects to not rely on legacy node.js module resolution
    "moduleResolution": "nodenext",
    "module": "NodeNext",

    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "removeComments": false,
    "skipLibCheck": true,

    // 'strict' ts settings help catch bugs during development
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "forceConsistentCasingInFileNames": true,

    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "importHelpers": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "pretty": true
  }
}
